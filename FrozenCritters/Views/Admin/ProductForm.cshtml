@model FrozenCritters.Models.Products
@{
    ViewBag.Title = "Edit Product";
    var cats = FrozenCritters.Models.FrozenCrittersDb.GetCategories();
}
<h2>Edit Product</h2>
@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ProductsName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductsName, new { htmlAttributes = new { @class = "form-control", value = Model.ProductsName } })
                @Html.ValidationMessageFor(model => model.ProductsName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ProductsDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductsDescription, new { htmlAttributes = new { @class = "form-control", value = Model.ProductsDescription } })
                @Html.ValidationMessageFor(model => model.ProductsDescription, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ProductsPrice, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductsPrice, new { htmlAttributes = new { @class = "form-control", value = Model.ProductsPrice } })
                @Html.ValidationMessageFor(model => model.ProductsPrice, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ProductsSalePrice, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductsSalePrice, new { htmlAttributes = new { @class = "form-control", value = Model.ProductsSalePrice } })
                @Html.ValidationMessageFor(model => model.ProductsSalePrice, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ProductsFeatureSale, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.ProductsFeatureSale, new { htmlAttributes = new { @class = "form-control", value = Model.ProductsFeatureSale } })
                    @Html.ValidationMessageFor(model => model.ProductsFeatureSale, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ProductsFeature, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.ProductsFeature, new { htmlAttributes = new { @class = "form-control", value = Model.ProductsFeature } })
                    @Html.ValidationMessageFor(model => model.ProductsFeature, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ProductsQuantity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductsQuantity, new { htmlAttributes = new { @class = "form-control", value = Model.ProductsQuantity } })
                @Html.ValidationMessageFor(model => model.ProductsQuantity, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="categories">Categories: </label>
            <div class="col-md-10">
                <select class="form-control" id="sel1">
                    @foreach (var cat in cats)
                    {
                        <option value="cat.CategoriesId">@cat.CategoriesName</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="sel1">Categories:</label>

        </div>
        <div class="form-group">
            <label for="mainPhoto">Main Photo: </label>
            <div class="col-md-10">
                <input type="file" name="ProductsPhoto" id="mainPhoto" accept="image/jpg, image/png" />
            </div>
        </div>
        <div class="form-group">
            <label for="altPhoto1">Alt Photo 1: </label>
            <div class="col-md-10">
                <input type="file" name="ProductsPhoto2" id="altPhoto1" accept="image/jpg, image/png" />
            </div>
        </div>
        <div class="form-group">
            <label for="altPhoto2">Alt Photo 2: </label>
            <div class="col-md-10">
                <input type="file" name="ProductsPhotot3" id="altPhoto2" accept="image/jpg, image/png" />
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-10">
                <span for="altPhoto3">Alt Photo 3: </span> <input type="file" name="ProductsPhoto4" id="altPhoto3" accept="image/jpg, image/png" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <span for="altPhoto4">Alt Photo 4: </span><input type="file" name="ProductsPhoto5" id="altPhoto4" accept="image/jpg, image/png" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
