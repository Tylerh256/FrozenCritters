@model FrozenCritters.Models.Photos

@{
    ViewBag.Title = "AddPhoto";
    var message = ViewBag.Error;
}

<h2>Add Photo</h2>

<p style="color:red;">@message</p>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="loginLabel">
                <span class="loginLabel">Photo Name</span>
                @Html.EditorFor(model => model.PhotosName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhotosName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="loginLabel">
                <span class="loginLabel">Photo Description</span>
                @Html.EditorFor(model => model.PhotosDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhotosDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="photoLabel">Photo</div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="file" name="PhotosFile" />
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
