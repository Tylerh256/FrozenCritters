@model FrozenCritters.Models.Laws

@{
    ViewBag.Title = "AddLaw";
}

<h2>Add Law</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="loginLabel">
                <span class="loginLabel">Law Title</span>
                @Html.EditorFor(model => model.LawsTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LawsTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="loginLabel">
                <span class="loginLabel">Law Link</span>
                @Html.EditorFor(model => model.LawsLink, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LawsLink, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
