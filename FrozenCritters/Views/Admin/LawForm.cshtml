@model FrozenCritters.Models.Laws
@{
    ViewBag.Title = "Law Form";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Laws</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.LawsId)

        <div class="form-group">
            @Html.LabelFor(model => model.LawsTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LawsTitle, new { htmlAttributes = new { @class = "form-control", value = Model.LawsTitle } })
                @Html.ValidationMessageFor(model => model.LawsTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LawsLink, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LawsLink, new { htmlAttributes = new { @class = "form-control", Model.LawsLink } })
                @Html.ValidationMessageFor(model => model.LawsLink, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>