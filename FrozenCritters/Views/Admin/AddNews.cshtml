@model FrozenCritters.ViewModels.AddNewsViewModel
@{
    ViewBag.Title = "Add News";
}
<h2>Add News</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="loginLabel">
                <span class="loginLabel">News Title</span>
                @Html.EditorFor(model => model.NewsTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NewsTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="loginLabel">
                <span class="loginLabel">News Description</span>
                <br />
                @Html.TextAreaFor(model => model.NewsDescription, new { @class = "whatever-class", @cols = 80, @rows = 10 })
                <br />
                @Html.ValidationMessageFor(model => model.NewsDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="loginLabel">
                <span class="loginLabel">News Posting Date (dd/mm/yyyy)</span>
                @Html.EditorFor(model => model.NewsPostDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NewsPostDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="loginLabel">
                <span class="loginLabel">News Expiration Date (dd/mm/yyyy)</span>
                @Html.EditorFor(model => model.NewsExpirationDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NewsExpirationDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
